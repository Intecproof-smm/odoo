
<odoo>
    <data>
        <!-- Form view for patient.sync model -->
        <record id="view_patient_sync_form" model="ir.ui.view">
            <field name="name">patient.sync.form</field>
            <field name="model">patient.sync</field>
            <field name="arch" type="xml">
                <form string="Patient Synchronization">
                    <header>
                        <!-- Custom button to trigger sync_patients method -->
                        <button name="sync_patients" string="Sync Patients" type="object" class="oe_highlight"/>
                    </header>
                </form>
                <sheet>
                    <!-- Text area to display log messages -->
                    <field name="log_messages" widget="html"/>
                    <!-- Add other fields here -->
                </sheet>
            </field>
        </record>
          <!-- Define an action to open the patient.sync.form view -->
        <!-- <record id="action_patient_sync" model="ir.actions.act_window">
            <field name="name">Patient Synchronization</field>
            <field name="res_model">patient.sync</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_patient_sync_form"/>
            <field name="target">new</field>
        </record> -->

        <!-- Add the action to a menu item -->
        
        <!-- <menuitem id="menu_patient_sync_action" name="Sync Patients" sequence="10" action="action_patient_sync"/> -->

        <record id="ir_cron_patient_sync" model="ir.cron">
            <field name="name">Sincronizar pacientes</field>
            <field name="model_id" ref="model_patient_sync"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="code">
                model.sync_patients()
            </field>
        </record>
    </data>
</odoo>