<odoo>
    <data>
        <!-- Define an action to open the patient.sync.form view -->
        <record id="action_patient_sync" model="ir.actions.act_window">
            <field name="name">Patient Synchronization</field>
            <field name="res_model">patient.sync</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_patient_sync_form"/>
            <field name="target">new</field>
        </record>

        <!-- Add the action to a menu item -->
        
        <menuitem id="menu_patient_sync_action" name="Sync Patients" sequence="10" action="action_patient_sync"/>
    </data>
</odoo>