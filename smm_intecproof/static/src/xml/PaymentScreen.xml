<templates id="template" xml:space="preserve">
  <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
    <xpath expr="." position="inside">
      <style>
            .payment-screen .center-content {
                  background: whitesmoke;
            }
            .pos .paymentlines-container,
            .pos .payment-buttons-container {
                  visibility: hidden;
            }
            .paymentline .payment-amount {
                  display: none;
            }
            .screen .right-content {
                  visibility: hidden;
            }
      </style>
    </xpath>
</templates>