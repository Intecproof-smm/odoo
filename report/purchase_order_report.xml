                                </td>
                                <td colspan="6">
                                    <span t-esc="main['salesman']"/>
                                </td>
                                <td colspan="6">
                                    <span t-esc="main['default_code']"/>
                                </td>
                                <td colspan="6">
                                    <span t-esc="main['product']"/>
                                </td>
