<templates id="template" xml:space="preserve">
  <t t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
    <xpath expr="." position="inside">
      <style>
            .pos .product .price-tag {
                  color: #fff !important;
            }
            .orderline .price {
                  display: none;
            }
            .orderline .info-list li.info {
                  color: #00000000;
            }
            .pos .order .summary {
                  display: none;
            }
            .pos .order .orderline .product-name {
                  width: 100%;
            }
      </style>
    </xpath>
</templates>